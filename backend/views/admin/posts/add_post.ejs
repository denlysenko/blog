<%- include('../../blocks/top') %>
<header>
	<%- include('../../blocks/nav_admin') %>
</header>
<div class="content">
	<div>
		<h4><%= title %></h4>
		<% if(post) {%>
		<form action="/admin/posts/edit/<%= post.id %>" method="post" enctype="multipart/form-data">
			<div class="form-group">
				<label for="title">Title</label>
				<input type="text" name="title" value="<%= post.title %>" id="title" data-validate="required">
			</div>
			<div class="form-group">
				<label for="cat">Choose Category</label>
				<div class="select dropdown" id="cat">
					<span data-toggle="dropdown"><%= post.category %></span>
					<ul class="dropdown-menu">
						<li>Diary</li>
						<li>Personal</li>
						<li>Holiday</li>
						<li>Work</li>
						<li>Family</li>
					</ul>
					<input type="hidden" name="category">
				</div>
			</div>
			<div class="form-group">
				<label for="post">Enter Post</label>
				<textarea name="post" id="post" data-validate="required"><%= post.body %></textarea>
			</div>
			<div class="form-group">
				<label for="photo">Load Photo</label>
				<input type="file" name="photo" id="photo">
			</div>
			<div class="form-group">
				<button type="submit" class="btn">Edit Post</button>
			</div>

			<% } else { %>
			<form action="/admin/posts/add" method="post" enctype="multipart/form-data">
			<div class="form-group">
				<label for="title">Title</label>
				<input type="text" name="title" placeholder="Enter Title" id="title" data-validate="required">
			</div>
			<div class="form-group">
				<label for="cat">Choose Category</label>
				<div class="select dropdown" id="cat">
					<span data-toggle="dropdown">Choose Category</span>
					<ul class="dropdown-menu">
						<li>Diary</li>
						<li>Personal</li>
						<li>Holiday</li>
						<li>Work</li>
						<li>Family</li>
					</ul>
					<input type="hidden" name="category">
				</div>
			</div>
			<div class="form-group">
				<label for="post">Enter Post</label>
				<textarea name="post" id="post" placeholder="New Post" data-validate="required"></textarea>
			</div>
			<div class="form-group">
				<label for="photo">Load Photo</label>
				<input type="file" name="photo" id="photo">
			</div>
			<div class="form-group">
				<button type="submit" class="btn">Add Post</button>
			</div>
			<% } %>
		</form>
	</div>
</div>
<%- include('../../blocks/bottom') %>