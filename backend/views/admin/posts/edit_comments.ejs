<%- include('../../blocks/top') %>
<header>
	<%- include('../../blocks/nav_admin') %>
</header>
<div class="content">
	<div>
		<h4><%= title %></h4>
		<div class="form-group">
			<label for="title">Title</label>
			<input type="text" name="title" value="<%= post.title %>" id="title">
		</div>
		<div class="form-group">
			<label for="cat">Category</label>
			<input type="text" name="category" value="<%= post.category %>">
		</div>
		<div class="form-group">
			<label for="post">Post</label>
			<textarea name="post" id="post"><%= post.body %></textarea>
		</div>
		<div class="comments-list" id="comments">
		<% if(post._comments.length) { comments = comments.filter(function(comment){return comment._post.toString() === post._id.toString() }); %>
		<% comments.forEach(function(comment) { %>
		<div class="comment-item">
			<div class="comments-header">
				<div class="name">
					<h4><%= comment.author %></h4>
				</div>
			</div>
			<div class="comments-body">
				<%= comment.body %>
			</div>
			<a href="#" data-toggle="reply">Actions</a>
			<form action="/admin/posts/<%= post._id %>/comments/<%= comment._id %>" method="post">
				<div class="form-group">
					<button type="submit" class="btn">Delete Comment</button>
				</div>
			</form>
		</div>	
		<% })} %>
	</div>
</div>
<%- include('../../blocks/bottom') %>

