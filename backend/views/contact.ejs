<%- include('blocks/top') %>
<header>
	<img src="<%= user.logo %>" height="403" width="1220" alt="header_bg">
</header>
<div class="container">
	<%- include('blocks/nav') %>		
		<div class="content">
			<div class="post contact">
				<div class="body">
				<h3>Please, fill the form to contact me</h3>
				<form action="/contact" method="post" id="contact">
					<div class="form-group">
						<label for="name">Your name</label>
						<input type="text" name="name" id="name" placeholder="Name" data-validate="required">
					</div>
					<div class="form-group">
						<label for="email">Your Email</label>
						<input type="email" name="email" id="email" placeholder="Email" data-validate="required">
					</div>
					<div class="form-group">
						<label for="message">Your Message</label>
						<textarea name="message" id="message" placeholder="Message" data-validate="required"></textarea>
					</div>
					<div class="form-group">
						<button type="submit" class="btn">Send Message</button>
					</div>
				</form>
			</div>		
		</div>
	</div>	
</div>
			
<%- include('blocks/bottom') %>
